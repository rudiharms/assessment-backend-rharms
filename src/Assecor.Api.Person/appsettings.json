{
  "ConnectionStrings": {
    "PersonDb": "Data Source=../Assecor.Api.Infrastructure/Sql/persons.db"
  },
  "SqlOptions": {
    "UseSql": false // false = uses default Csv, true = SqlLite
  },
  "CsvOptions": {
    "FilePath": "../Assecor.Api.Infrastructure/Csv/sample-input.csv",
    "Delimiter": ","
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.AspNetCore": "Information",
        "Serilog.AspNetCore": "Information",
        "Microsoft.AspNetCore.Hosting": "Warning",
        "Microsoft.AspNetCore.Mvc": "Warning",
        "Microsoft.AspNetCore.Routing": "Warning",
        "Microsoft.AspNetCore.StaticFiles": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Debug"
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "log\\log.log",
                "rollingInterval": "Day",
                "buffered": false,
                "shared": true,
                "flushToDiskInterval": 1,
                "fileSizeLimitBytes": 524288000,
                "rollOnFileSizeLimit": true
              }
            },
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Properties:j}{NewLine}{Exception}{NewLine}"
              }
            }
          ]
        }
      }
    ]
  }
}
